<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".isi_air"
    android:padding="5dp">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/simpleSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutFragment">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text=""
            android:background="@drawable/background_langit"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Time - UTC"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="26dp"
            />

        <TextView
            android:id="@+id/rain_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:ems="6"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:text="HASIL"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="Rain"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/rain_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="@drawable/rectangle1"
            android:ems="6"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="Evaporation"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/rain_evaporation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:layout_marginTop="320dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:background="@drawable/rectangle1"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
           android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="Surface"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/rain_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:layout_marginTop="370dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/rectangle1"
            />



    </FrameLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>